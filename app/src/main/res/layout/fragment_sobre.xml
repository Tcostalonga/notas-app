<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sobreFragment.SobreFragment">

    <ImageView
        android:id="@+id/img_icone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="6"
        android:contentDescription="@string/icone_do_aplicativo"
        android:src="@drawable/ic_icone_circular" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_media"
        android:layout_weight="5">

        <TextView
            android:id="@+id/txt_conteudo"
            style="@style/textoEstilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/disclaimer"
            android:text="@string/disclaimer" />
    </ScrollView>
</LinearLayout>


