<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.addfragment.AddFragment">

    <data>

        <variable
            name="viewModelAddF"
            type="tarsila.costalonga.notasapp.ui.addfragment.AddViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_pequena_8"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@null"
                android:textStyle="bold"
                android:hint="@string/titulo"
                android:inputType="textAutoComplete|textCapSentences"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="@dimen/margin_media_16" />

            <EditText
                android:id="@+id/add_anotacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start"
                android:hint="@string/anotacao"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="@dimen/margin_media_16" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_task_fab"
            style="@style/FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_larga_20"
            android:contentDescription="@string/salvar_nota"
            app:srcCompat="@drawable/done_24"
            app:fabSize="normal"
            app:layout_anchor="@id/linear_layout_add"
            app:layout_anchorGravity="bottom|end" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
