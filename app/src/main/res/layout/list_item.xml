<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.widget.CompoundButton" />

        <variable
            name="itemView"
            type="tarsila.costalonga.notasapp.bd.Notas" />

        <variable
            name="viewModel"
            type="tarsila.costalonga.notasapp.ui.mainfragment.MainViewModel" />

        <variable
            name="clickListener"
            type="tarsila.costalonga.notasapp.ui.mainfragment.NotasListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drag_indicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/drag_indicator_24" />

        <CheckBox
            android:id="@+id/show_checkbox"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="@{itemView.finalizado}"
            android:contentDescription="@string/botao_check"
            android:onClick="@{(view) -> viewModel.checkboxStatus(itemView, ((CompoundButton)view).isChecked())}"
        />
        <TextView
            android:id="@+id/show_titulo"
            style="@style/textoEstilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_pequena"
            android:contentDescription="@string/titulo"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:onClick="@{() -> clickListener.onClick(itemView)}"
            android:text="@{itemView.titulo}"
            app:notaFinalizada="@{itemView.finalizado}"
            tools:text="@string/titulo"

            />

    </LinearLayout>
</layout>
