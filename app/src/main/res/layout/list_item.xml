<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemView"
            type="tarsila.costalonga.notasapp.bd.Notas" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drag_indicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/margin_pequena_5"
            app:srcCompat="@drawable/drag_indicator_24"
            tools:ignore="RtlSymmetry" />

        <CheckBox
            android:id="@+id/show_checkbox"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="@{itemView.finalizado}"
            android:contentDescription="@string/botao_check"
            tools:checked="true" />

        <TextView
            android:id="@+id/show_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_pequena_5"
            android:layout_marginEnd="@dimen/margin_pequena_5"
            android:contentDescription="@string/titulo"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:paddingTop="@dimen/margin_pequena_8"
            android:paddingBottom="@dimen/margin_pequena_8"
            android:text="@{itemView.titulo}"
            tools:text="@string/titulo" />

    </LinearLayout>
</layout>
