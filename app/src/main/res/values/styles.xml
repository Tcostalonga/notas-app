<resources xmlns:tools="http://schemas.android.com/tools">

    // Tema do app

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorbkg</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:datePickerDialogTheme">@style/PickerStyle</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--
            <item name="tint">@color/colorAccent</item>
    -->

    //Alert Dialog Estilo

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="buttonBarButtonStyle">@style/ButtonsStyle</item>

    </style>

    //DatePicker Dialog Estilo

    <style name="PickerStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorVerde</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonsStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonsStyle</item>
    </style>

    //ButtonStyle

    <style name="ButtonsStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="rippleColor">@color/colorAccent</item>

    </style>


    //TopBar

    <style name="ActivityTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    //Datas

    <style name="datasEstilo" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/proxima_nova</item>
        <item name="android:textSize">15sp</item>
    </style>


    //Textos Estatisticas

    <style name="estatisticasEstilo" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_margin">@dimen/margin_pequena_8</item>
    </style>

    //BottomBar

    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">#E3E4D6</item>
    </style>

    //Fab

    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorVerde</item>
        <item name="tint">@color/colorbkg</item>
    </style>


    //AlarmButton

    <style name="AlarmButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margin_larga_50</item>
    </style>

    //TimePickereDatePickerBox

    <style name="myTimePicker">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    //CardsAlarmFragment

    <style name="myCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorbkg</item>
        <item name="cardCornerRadius">@dimen/margin_pequena_8</item>
        <item name="android:layout_marginStart">@dimen/margin_pequena_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_pequena_8</item>
        <item name="android:layout_marginTop">@dimen/margin_larga_20</item>
        <item name="strokeColor">@color/colorVerde</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>